{
  "name": "home-mcp",
  "version": "0.0.9",
  "description": "Home Assistant MCP Server - A Model Context Protocol server for smart home integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "home-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch \"src/**/*\" --ext ts,js --exec \"tsup --watch --config config/tsup.config.ts && node dist/index.js\"",
    "dev:mock": "USE_MOCK=true nodemon --watch \"src/**/*\" --ext ts,js --exec \"tsup --watch --config config/tsup.config.ts && node dist/index.js\"",
    "dev:docs": "cd docs && pnpm run dev",
    "build": "tsup --config config/tsup.config.ts",
    "clean": "rm -rf dist",
    "test": "vitest run --config config/vitest.config.ts",
    "test:mock": "USE_MOCK=true vitest run --config config/vitest.config.ts",
    "test:silent": "vitest run --silent --config config/vitest.config.ts",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "type:check": "tsc --project config/tsconfig.typecheck.json",
    "spell:check": "cspell --config config/cspell.json \"**/*.{ts,js,json,md,yml,yaml,toml}\"",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "check:all": "pnpm check && pnpm type:check && pnpm spell:check"
  },
  "keywords": [
    "homeassistant",
    "mcp",
    "iot",
    "smart-home",
    "model-context-protocol"
  ],
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/home-mcp.git"
  },
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@conventional-changelog/git-client": ">=2.0.0",
      "esbuild": ">=0.25.0",
      "vite@>=5.2.6 <=5.4.20": ">=5.4.21",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1",
      "mdast-util-to-hast@>=13.0.0 <13.2.1": ">=13.2.1"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "bestmcp": "^0.1.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "happy-dom": "^20.0.0",
    "msw": "^2.12.2",
    "nodemon": "^3.1.7",
    "release-it": "^19.0.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  }
}
