{
  "name": "home-mcp",
  "version": "0.0.2",
  "description": "Home Assistant MCP Server - A Model Context Protocol server for smart home integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "home-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch \"src/**/*\" --ext ts,js --exec \"tsc && node dist/index.js\"",
    "build": "tsc",
    "test": "vitest run",
    "test:silent": "vitest run --silent",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type:check": "tsc --project tsconfig.typecheck.json",
    "type:check:bestmcp": "cd packages/bestmcp && tsc --project tsconfig.typecheck.json",
    "type:check:all": "pnpm run type:check && pnpm run type:check:bestmcp",
    "spell:check": "cspell \"**/*.{ts,js,json,md,yaml}\"",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "check:all": "pnpm check && pnpm type:check && pnpm spell:check",
    "docs:dev": "cd docs && mintlify dev"
  },
  "keywords": [
    "homeassistant",
    "mcp",
    "iot",
    "smart-home",
    "model-context-protocol"
  ],
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/home-mcp.git"
  },
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@conventional-changelog/git-client": ">=2.0.0",
      "esbuild": ">=0.25.0"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "bestmcp": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "happy-dom": "^20.0.0",
    "mintlify": "^4.2.158",
    "nodemon": "^3.1.7",
    "release-it": "^19.0.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  }
}
