{
  "name": "home-mcp",
  "version": "0.0.1",
  "description": "Home Assistant MCP Server - A Model Context Protocol server for smart home integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "home-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "test": "vitest run",
    "test:silent": "vitest run --silent",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type:check": "tsc --project tsconfig.typecheck.json",
    "spell:check": "cspell \"**/*.{ts,js,json,md,yaml}\"",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "check:all": "pnpm check && pnpm type:check && pnpm spell:check"
  },
  "keywords": [
    "homeassistant",
    "mcp",
    "iot",
    "smart-home",
    "model-context-protocol"
  ],
  "author": "shenjingnan(sjn.code@gmail.com)",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "bestmcp": "workspace:*",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "happy-dom": "^15.10.2",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  }
}
